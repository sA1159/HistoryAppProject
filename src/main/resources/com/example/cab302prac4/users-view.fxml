<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Hyperlink?>
<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cab302prac4.controller.UsersPageController"
>
    <HBox id="MainBar" alignment="TOP_RIGHT" spacing="10.0">
        <Button alignment="TOP_LEFT" fx:id="returnButton" text="Return" onAction="#onReturnButtonClick"/>
    </HBox>
    <VBox>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
        </padding>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox alignment="TOP_CENTER" spacing="5.0">
        <Label text="Search"/>
        <TextField fx:id="searchTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="Infinity"/>
        <Button text="Search" onAction="#onSearch"/>
    </HBox>
    <HBox alignment="TOP_LEFT" spacing="5.0">
        <Label text="Select a User to view" />
    </HBox>
    <HBox VBox.vgrow="ALWAYS" spacing="20.0">
        <VBox spacing="10.0">
            <ListView fx:id="usersListView"  />
        </VBox>
        <VBox spacing="10.0" prefWidth="400" fx:id="userContainer">
            <Label text="User details:" />
            <GridPane hgap="5.0" vgap="5.0" >
                <columnConstraints>
                    <ColumnConstraints minWidth="70" />
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="firstNameTextFIeld" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="Infinity"/>
                <TextField fx:id="lastNameTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="emailTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </GridPane>
            <HBox>
                <Button alignment="TOP_CENTER" fx:id="profileButton" text="View Profile" onAction="#onProfileButtonClick"/>
            </HBox>
        </VBox>
    </HBox>
        <HBox>
            <Label fx:id="totalUsers"></Label>
        </HBox>
    </VBox>
</VBox>