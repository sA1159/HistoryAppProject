<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cab302prac4.controller.CreateAccountController">
    <HBox id="MainBar" alignment="TOP_RIGHT" spacing="10.0">
        <Button alignment="TOP_LEFT" fx:id="returnButton" text="Return" onAction="#onReturnButtonClick"/>
    </HBox>
    <VBox VBox.vgrow="ALWAYS" spacing="15.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
        </padding>
        <HBox>
            <Label text="Sign Up" style="-fx-font-size: 24px;" />
        </HBox>
        <children>
                <TextField fx:id="firstNameField" promptText="First Name" />
                <TextField fx:id="lastNameField" promptText="Last Name"/>
                <TextField fx:id="emailField" promptText="Email" />
                <PasswordField fx:id="passEntry" promptText="Password" />
                <PasswordField fx:id="confirmPassEntry" promptText="Confirm Password" />
                <Button fx:id="signUpButton" onAction="#onSignUpButtonClick" text="Sign Up" />
                <Label fx:id="errorLabel"/>
        </children>
</VBox>
</VBox>

