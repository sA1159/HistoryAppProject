<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302prac4.controller.SignupController" spacing="10" alignment="CENTER">
    <children>
        <Label text="Sign Up" style="-fx-font-size: 24px;" />
        <TextField fx:id="firstNameField" promptText="First Name" />
        <TextField fx:id="lastNameField" promptText="Last Name" />
        <TextField fx:id="emailField" promptText="Email" />
        <TextField fx:id="passwordField" promptText="Password" />
        <Button text="Sign Up" onAction="#signupAction" />
    </children>
</VBox>
