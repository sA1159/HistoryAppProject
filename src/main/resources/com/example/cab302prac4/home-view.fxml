<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cab302prac4.controller.HomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Welcome to the Local History Archive Application." wrapText="true"/>

    <HBox alignment="BASELINE_CENTER" spacing="10.0">
        <Button fx:id="uploadPageButton" text="Upload" onAction="#onUploadPageButtonClick"/>
    </HBox>
    <HBox alignment="BASELINE_CENTER" spacing="10.0">
        <Button fx:id="searchPageButton" text="Search" onAction="#onSearchPageButtonClick"/>
    </HBox>
    <HBox alignment="BASELINE_CENTER" spacing="10.0">
        <Button fx:id="collectionsPageButton" text="Your Collections" onAction="#onCollectionsPageButtonClick"/>
    </HBox>
</VBox>