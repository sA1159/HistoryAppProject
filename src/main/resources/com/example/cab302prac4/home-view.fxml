<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cab302prac4.controller.HomeController">
    <HBox id="TopBar" alignment="TOP_CENTER" spacing="10.0">
       <Label text="Home Page"></Label>
    </HBox>
    <VBox>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
        </padding>

    <Label text="Welcome to the Vault Application." wrapText="true"/>
    <VBox spacing="30.0">
    <HBox alignment="BASELINE_CENTER">
        <Button fx:id="uploadPageButton" text="Upload" onAction="#onUploadPageButtonClick"/>
    </HBox>
    <HBox alignment="BASELINE_CENTER">
        <Button fx:id="searchPageButton" text="Search" onAction="#onSearchPageButtonClick"/>
    </HBox>
    <HBox alignment="BASELINE_CENTER">
        <Button fx:id="collectionsPageButton" text="View Collections" onAction="#onCollectionsPageButtonClick"/>
    </HBox>
    <HBox alignment="BASELINE_CENTER">
        <Button fx:id="yourCollectionsPageButton" text="Your Collections" onAction="#onYourCollectionsPageButtonClick"/>
    </HBox>
        <HBox alignment="BASELINE_CENTER">
            <Button fx:id="logoutButton" text="Logout" onAction="#onLogoutButtonClick"/>
        </HBox>
    </VBox>
    </VBox>
</VBox>